<%= form_for @item do |f| %>
  <%= f.text_field :name, :id => "title" %>Title</br>
  <%= f.text_area :description, :id => "description" %>Description</br>
  <%= f.text_field :price, :id => "price" %>Price</br>
  <%= f.text_field :category_id, :id => "category_id" %>Category</br>
  <%= f.submit "Save Item" %>
<% end %>
